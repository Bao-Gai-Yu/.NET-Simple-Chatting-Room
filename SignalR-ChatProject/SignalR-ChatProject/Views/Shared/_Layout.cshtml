<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 简易聊天室</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        html {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            background-size:cover;
            justify-content:space-between;
            height:100%;
        }

        .navbar {
            flex: 0 0 50px; /* 固定高度 */
        }

        .body-content {
            flex: 1 0 100%-50px; /* 占满剩余高度 */
            display: flex;
            justify-content: center;
            align-items: center;
            width:100%;
        }

        footer {
            flex: 0 0 50px; /* 固定高度 */
            display: flex;
            flex-direction:column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        footer > div {
            width: fit-content;
            color:aliceblue
        }
    </style>
</head>

<body background="~/Content/background.png">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("简易聊天室", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("聊天页", "Index", "Home")</li>
                    <li>@Html.ActionLink("数据统计", "Dashboard", "Home")</li>
                    <li>@Html.ActionLink("通知", "Notification", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content" style="justify-content: center; align-items: center; height:100%">
        @RenderBody()
    </div>

    <footer style="display:flex; align-items : center; justify-content: center; ">
        <hr />
        <div style="align-items:center; width:fit-content">&copy; @DateTime.Now.Year - 简易聊天室</div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
